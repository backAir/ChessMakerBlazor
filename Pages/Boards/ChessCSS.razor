@* Normal Board CSS *@
@if(chessBoard != null){
    <style>
    .piece {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        object-fit: contain;
        z-index: 1;
    }
    .chessboard {
        grid-template-columns: repeat(@chessBoard.boardSize[0], 1fr);
        grid-template-rows: repeat(@chessBoard.boardSize[1], 1fr);
        aspect-ratio: @(chessBoard.boardSize[0]) / @(chessBoard.boardSize[1]);
        @* height: calc(100vh/(@(chessBoard.boardSize[0]) / @(chessBoard.boardSize[1]))); *@
    }
    </style>
}


